<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="ScheduleView" tools:ignore="ResourceName">
        <!-- elementGap这个参数是用来调整item间距的,并且与GridView不同,这个在边界上也会添加-->
        <attr name="elementGap" format="dimension" />
        <!-- 没有课的时候，显示的图片的宽高,若需要显示没课时的提示，必须加这两个属性-->
        <attr name="noGourseImageHeight" format="dimension" />
        <attr name="noGourseImageWidth" format="dimension" />
        <attr name="touchViewColor" format="color" />
        <attr name="heightAtLowDpi" format="dimension" />
        <attr name="touchViewDrawable" format="reference" />
        <attr name="highlightColor" format="color" />
        <attr name="noCourseDrawable" format="reference" />
        <attr name="emptyText" format="string" />
        <attr name="emptyTextSize" format="dimension" />
        <attr name="isDisplayCourse" format="boolean" />
        <attr name="ScheduleViewStyle" format="reference"  />
    </declare-styleable>
    <item name="item_position_row" type="id" tools:ignore="ResourceName" />
    <item name="item_position_column" type="id" tools:ignore="ResourceName" />
    <item name="item_info" type="id" tools:ignore="ResourceName" />

    <!--    课表其他配件view的定位tag的id-->
    <item name="childTop" type="id" tools:ignore="ResourceName" />
    <item name="childLeft" type="id" tools:ignore="ResourceName" />
    <item name="childBottom" type="id" tools:ignore="ResourceName" />
    <item name="childRight" type="id" tools:ignore="ResourceName" />

    <item name="touchPosition" type="id" tools:ignore="ResourceName" />
</resources>