<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/course_tv_week_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/levelOneFontColor"
        android:textSize="@dimen/course_top_and_left_text_size"
        app:layout_constraintBottom_toTopOf="@+id/course_tv_day_of_month"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="周一" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/course_tv_day_of_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.6"
        android:textColor="@color/levelOneFontColor"
        android:textSize="@dimen/course_column_text_size"
        app:layout_constraintTop_toBottomOf="@id/course_tv_week_day"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="30日" />

</androidx.constraintlayout.widget.ConstraintLayout>