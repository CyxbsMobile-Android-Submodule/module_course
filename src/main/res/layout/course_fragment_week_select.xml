<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listeners"
            type="com.mredrock.cyxbs.course.ui.WeekSelectDialogFragment.WeekSelectListeners" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_marginStart="3dp"
            android:background="?android:attr/selectableItemBackground"
            android:cropToPadding="true"
            android:onClick="@{listeners::onCancelClick}"
            android:padding="18dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/course_ic_cancel"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/course_shape_affair_modify_button_backgroud"
            android:gravity="center_vertical"
            android:onClick="@{listeners::onSureClick}"
            android:text="@string/course_sure"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="42dp"
            android:textColor="@color/whiteFontColor"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.mredrock.cyxbs.common.component.RedRockAutoWarpView
            android:id="@+id/course_auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:horizontalSpacing="8dp"
            app:verticalsSpacing="10dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_sure"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.mredrock.cyxbs.common.component.RedRockAutoWarpView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>