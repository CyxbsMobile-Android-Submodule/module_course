<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/course_time"
        android:background="@drawable/course_shape_add_affair_detailed_backgroud"
        android:textStyle="bold"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:paddingEnd="13dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingStart="13dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="15sp"
        android:textColor="@color/levelTwoFontColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="周日 五六节课" />

    <ImageView
        android:id="@+id/affair_iv_cancel"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:paddingBottom="6dp"
        android:paddingStart="6dp"
        app:srcCompat="@drawable/course_ic_time_cancel"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/course_time"
        app:layout_constraintStart_toStartOf="@id/course_time" />

</androidx.constraintlayout.widget.ConstraintLayout>