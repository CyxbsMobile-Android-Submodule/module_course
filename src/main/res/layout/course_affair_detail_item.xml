<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_affair_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/course_schedule_detail_icon_height"
        android:layout_marginTop="@dimen/course_affair_detail_image_right_and_top_margin"
        android:layout_marginEnd="@dimen/course_affair_detail_image_right_and_top_margin"
        android:src="@mipmap/course_ic_course_name"
        app:layout_constraintBottom_toTopOf="@id/iv_affair_detail"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_affair_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_affair_detail"
        android:layout_width="0dp"
        android:layout_height="@dimen/course_schedule_detail_icon_height"
        android:layout_marginTop="@dimen/course_affair_detail_image_right_and_top_margin"
        android:layout_marginEnd="@dimen/course_affair_detail_image_right_and_top_margin"
        android:src="@mipmap/course_ic_course_tech"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_affair_detail"
        app:layout_constraintTop_toBottomOf="@id/iv_affair_name"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_affair_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/course_affair_detail_image_right_and_top_margin"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintLeft_toRightOf="@id/iv_affair_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_affair_name" />

    <TextView
        android:id="@+id/tv_affair_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/course_affair_detail_image_right_and_top_margin"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintLeft_toRightOf="@id/iv_affair_detail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_affair_detail" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acb_modify"
        android:layout_width="@dimen/course_affair_detail_acb_width"
        android:layout_height="@dimen/course_affair_detail_acb_height"
        android:layout_marginTop="@dimen/course_affair_detail_image_right_and_top_margin"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:text="@string/course_affair_modify"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/acb_delete"
        app:layout_constraintTop_toBottomOf="@id/tv_affair_detail" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acb_delete"
        android:layout_width="@dimen/course_affair_detail_acb_width"
        android:layout_height="@dimen/course_affair_detail_acb_height"
        android:layout_marginTop="@dimen/course_affair_detail_image_right_and_top_margin"
        android:background="@color/colorAccent"
        android:text="@string/course_affair_delete"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@id/acb_modify"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_affair_detail" />


</androidx.constraintlayout.widget.ConstraintLayout>
